keyboard us
lang en_US.UTF-8
timezone --utc Europe/Brussels
text
install
reboot

zerombr
clearpart --all --initlabel
autopart --type=lvm
bootloader --location=mbr

rootpw --iscrypted !!
user --name={{ USER }} --groups=wheel

network --bootproto=dhcp

skipx
repo --name=updates

%packages
@core
qemu-guest-agent
-NetworkManager*
-iwl*firmware
%end

%post
/bin/mkdir /home/{{ USER }}/.ssh
/bin/chmod 0700 /home/{{ USER }}/.ssh
/bin/chown {{ USER }}:{{ USER }} /home/{{ USER }}/.ssh
/bin/curl -o /home/{{ USER }}/.ssh/authorized_keys https://www.stephanedewit.be/ssh/test.keys
/bin/chmod 0600 /home/{{ USER }}/.ssh/authorized_keys
/bin/chown {{ USER }}:{{ USER }} /home/{{ USER }}/.ssh/authorized_keys
/bin/sed -i 's/%wheel\tALL=(ALL)\tALL/%wheel\tALL=(ALL)\tNOPASSWD: ALL/' /etc/sudoers
%end
